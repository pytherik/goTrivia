extends layouts/mainLayout

block content
  .pre-choice
    h2#newQuest Bearbeiten
  .form-container.multiple 
    form.create-form(action="/quest/edit/"+_id+"?_method=PUT", method="POST")
      input(type="hidden", name="multiple" value="true")
      .inputField 
        input(type="text", id="cat", name="category",  
              placeholder="Kategorie", value=category, required)
      .inputField 
        input(type="text", id="question", name="question",  
              placeholder="Stelle eine Frage", required, value=question, autocomplete="off")
      .inputField 
        input(type="text", id="answer", name="answer",  
              placeholder="Die richtige Antwort", required, value=right_answer, autocomplete="off")
      .inputField 
        input(type="text", id="wrong1", name="wrong1",  
              placeholder="1. falsche Antwort", required, value=wrong_answers[0], autocomplete="off")
      .inputField 
        input(type="text", id="wrong2", name="wrong2",  
              placeholder="2. falsche", required, value=wrong_answers[1], autocomplete="off")
      .inputField 
        input(type="text", id="wrong3", name="wrong3",  
              placeholder="3. falsche", required, value=wrong_answers[2], autocomplete="off")
